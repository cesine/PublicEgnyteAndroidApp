<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout 
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/DOMAIN_VIEW" 
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@color/silver" >
	    
					<LinearLayout android:id="@+id/DOMAIN_VIEW" 
					    android:orientation="vertical"					    
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:background="@color/white">
					    
		         		<LinearLayout android:id="@+id/LOGO_BG" 
						    android:orientation="vertical"
						    android:layout_width="fill_parent"
						    android:layout_height="wrap_content"
						    android:background="#ffffff">

				            <ImageView
				                android:id="@+id/LOGO"
				                android:layout_width="fill_parent"
				                android:layout_height="fill_parent"
				                android:layout_gravity="center"
				                android:layout_marginTop="33dip"
				                android:layout_marginBottom="33dip"
				                android:src="@drawable/egnyte_logo" />

			            </LinearLayout>

		         		<LinearLayout
		         		    android:id="@+id/DOMAIN_VIEW"
		         		    android:layout_width="fill_parent"
		         		    android:layout_height="wrap_content"
		         		    android:orientation="vertical" >

		         		    <EditText
		         		        android:id="@+id/DOMAIN_INPUT"
		         		        android:layout_width="fill_parent"
		         		        android:layout_height="40dip"
		         		        android:layout_above="@+id/DOMAIN_EXAMPLE_TEXT"
		         		        android:layout_centerHorizontal="true"
		         		        android:layout_marginLeft="15dip"
		         		        android:layout_marginRight="15dip"
		         		        android:layout_marginBottom="20dip"
		         		        android:visibility="gone"
		         		        android:background="@android:drawable/editbox_background"
		         		        android:hint="yourdomain"
		         		        android:maxLines="1"
		         		        android:singleLine="true" >
		         		    </EditText>
		         		    
		         		    <LinearLayout
		         		        android:layout_width="fill_parent"
		         		        android:layout_height="wrap_content"
		         		        android:layout_below="@+id/DOMAIN_PASSWORD_INPUT"
		         		        android:layout_gravity="right"
		         		        android:layout_marginLeft="15dip"
		         		        android:layout_marginRight="15dip"
		         		        android:orientation="vertical" >
								<Button
		         		            android:id="@+id/EGNYTE_LINK_BTN"
		         		            android:layout_width="fill_parent"
		         		            android:layout_height="wrap_content"
		         		            android:layout_gravity="right"
		         		            android:layout_marginRight="0dip"
		         		            android:textStyle="bold"
		         		            android:textSize="30px"
		         		            android:text="@string/LINK_EGNYTE" />
		         		        <Button
		         		            android:id="@+id/SIGNIN_BTN"
		         		            android:layout_width="130dip"
		         		            android:layout_height="wrap_content"
		         		            android:layout_gravity="right"
		         		            android:visibility="gone"
		         		            android:textStyle="bold"
		         		            android:textSize="30px"
		         		            android:layout_marginRight="0dip"
		         		            android:text="@string/SIGNIN" />
		         		    </LinearLayout>
		         		</LinearLayout>

             </LinearLayout>
	</LinearLayout>   
			