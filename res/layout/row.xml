<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	  android:id="@+id/LISTVIEW_ROW"
	  android:orientation="horizontal"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:descendantFocusability="blocksDescendants"
	  android:background="@drawable/row_bg">
	  
	  <CheckBox android:id="@+id/DIR_CHECKBOX"
	  	  android:layout_marginLeft="8dip"
	  	  android:layout_marginTop="1dip"
		  android:layout_gravity="center_vertical"
		  android:choiceMode="multipleChoice"
		  android:layout_weight="2"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"/>
		  
	  <ImageView android:id="@+id/DIR_ICON"
	  	  android:layout_marginLeft="10dip"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:layout_weight="2"
		  android:layout_gravity="center_vertical" 
		  android:scaleType="center"/>
		  
	  <LinearLayout android:id="@+id/LISTVIEW_CONTENT"
		  	android:layout_width="fill_parent" 
		  	android:orientation="vertical" 
	  		android:layout_marginTop="7dip"
	  		android:layout_weight="66"
	  		android:layout_marginBottom="7dip"
		  	android:layout_height="40dip" 
		  	android:layout_gravity="center_vertical" android:gravity="center_vertical">
		  
		  <TextView android:id="@+id/text"
		  	  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:textColor="@color/black"
			  android:textStyle="bold"
			  android:layout_gravity="left" 
			  android:textSize="14dip" 
			  android:scrollHorizontally="true"
			  android:singleLine="true"
			  android:ellipsize="middle" 
			  android:text=" "
			  android:layout_marginLeft="10dip"
			  android:layout_marginRight="10dip"/>
		  <TextView android:id="@+id/subtext"
		  	  android:layout_width="fill_parent"
			  android:textStyle="bold"
			  android:layout_gravity="left" 
			  android:textSize="10dip" 
			  android:maxLines="1"
			  android:text=""
			  android:textColor="@color/gray"
			  android:layout_marginLeft="10dip" 
			  android:layout_height="wrap_content"/>
	  </LinearLayout>
</LinearLayout>

